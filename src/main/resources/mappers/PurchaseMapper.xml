<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.app.giticon_pr.mapper.PurchaseMapper">

  <!-- 구매 이력 등록 -->
  <insert id="insertPurchaseHistory" parameterType="com.app.giticon_pr.model.PurchaseHistory" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO purchase_history (user_id, total_price, purchased_at)
    VALUES (#{userId}, #{totalPrice}, NOW())
  </insert>

  <!-- 구매 항목 등록 -->
  <insert id="insertPurchaseItem" parameterType="com.app.giticon_pr.model.PurchaseItem">
    INSERT INTO purchase_item (purchase_id, gifticon_id)
    VALUES (#{purchaseId}, #{gifticonId})
  </insert>

  <!-- 특정 유저의 구매한 기프티콘 목록 조회 -->
  <select id="findPurchasedGifticons" parameterType="long" resultType="com.app.giticon_pr.model.Gifticon">
    SELECT g.*
    FROM purchase_history h
    JOIN purchase_item pi ON h.id = pi.purchase_id
    JOIN gifticon g ON pi.gifticon_id = g.id
    WHERE h.user_id = #{userId}
    ORDER BY h.purchased_at DESC
  </select>

</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.app.giticon_pr.mapper.UserMapper">

    <!-- 회원가입 -->
    <insert id="insertUser" parameterType="com.app.giticon_pr.dto.UserDto">
        INSERT INTO users (username, password)
        VALUES (#{username}, #{password})
    </insert>

    <!-- 로그인: username으로 조회 -->
    <select id="findByUsername" parameterType="String" resultType="com.app.giticon_pr.dto.UserDto">
        SELECT id, username, password
        FROM users
        WHERE username = #{username}
    </select>

</mapper>

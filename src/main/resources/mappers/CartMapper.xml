<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.app.giticon_pr.mapper.CartMapper">

  <select id="findAllByUserId" parameterType="long" resultType="com.app.giticon_pr.model.Gifticon">
    SELECT g.*
    FROM cart c
    JOIN gifticon g ON c.gifticon_id = g.id
    WHERE c.user_id = #{userId}
  </select>

  <insert id="insert" parameterType="com.app.giticon_pr.model.Cart" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO cart (user_id, gifticon_id)
    VALUES (#{userId}, #{gifticonId})
  </insert>

  <delete id="deleteById" parameterType="long">
    DELETE FROM cart WHERE id = #{id}
  </delete>

  <delete id="deleteAllByUserId" parameterType="long">
    DELETE FROM cart WHERE user_id = #{userId}
  </delete>

</mapper>
